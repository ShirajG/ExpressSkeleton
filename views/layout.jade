block vars

doctype html
html(lang='en')
  head
    block meta
      meta(charset='UTF-8')
      meta(name='viewport', content='width=device-width')

    block title
      title #{pageTitle}

    link(rel='stylesheet', href='/css/build.css')
    script(src="js/build.min.js")

    if ENV_DEVELOPMENT
      script(src='http://localhost:35729/livereload.js')

  block nav
    ul.nav.nav-tabs
      li(role="presentation")
        a(href="#") Home
      if session && session.passport.user
        li(role="presentation")
          a(href="/logout") Logout
      else
        li(role="presentation")
          a(href="/auth/google") Login with Google

  body
    block content
      .jumbotron
        .container
          h1= pageTitle

  block footer
    footer

  block scripts